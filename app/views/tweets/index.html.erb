<% if @tweet.errors.present? %>
<h3>入力内容にエラーがあります。</h3>
<ul>
  <% @tweet.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<table border="1">
  <tr>
    <th>Tweet内容</th>
    <th>日時</th>
  </tr>
<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet["message"] %></td>
    <td><%= tweet["tdate"].strftime('%Y年%m月%d日%H時%M分') %>
    (<%= (Time.now - tweet["tdate"]).div(60) %>分前)</td>
    <td>
      <%= link_to '表示', "/tweets/#{tweet.id}" %>
      <%= link_to '編集', "/tweets/#{tweet.id}/edit" %>
      <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
    </td>
<% end %>
</table>
<p>
  <%= link_to '新規Tweet', 'tweets/new' %>
</p>